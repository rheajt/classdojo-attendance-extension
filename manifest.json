{
  "manifest_version": 2,

  "name": "ClassDojo Extension",
  "description": "Extension to help teachers more effectively use ClassDojo",
  "version": "1.2",

  "icons": {
    "48": "promo/Raising-hand-48.png",
    "128": "promo/Raising-hand-128.png"
  },

  "browser_action": {
    "default_icon": "assets/classdojo-icon2.png",
    "default_popup": "dojo.html",
    "default_title": "Click here for ClassDojo controls"
  },

  "options_ui": {
    "page": "settings.html",
    "chrome_style": true
  },

  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ]
}
